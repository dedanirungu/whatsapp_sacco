<div class="container mt-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/transactions">Transactions</a></li>
      <li class="breadcrumb-item active" aria-current="page">Transaction Details</li>
    </ol>
  </nav>

  <div class="card">
    <div class="card-header">
      <h2>Transaction #{{transaction.id}}</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h5 class="card-title">Transaction Information</h5>
          <div class="mb-3">
            <strong>Type:</strong>
            {{#if (eq transaction.type "deposit")}}
              <span class="badge bg-success">Deposit</span>
            {{else if (eq transaction.type "withdrawal")}}
              <span class="badge bg-danger">Withdrawal</span>
            {{else if (eq transaction.type "loan")}}
              <span class="badge bg-primary">Loan</span>
            {{else if (eq transaction.type "repayment")}}
              <span class="badge bg-info">Repayment</span>
            {{else}}
              <span class="badge bg-secondary">{{transaction.type}}</span>
            {{/if}}
          </div>
          <div class="mb-3">
            <strong>Amount:</strong> {{formatCurrency transaction.amount}}
          </div>
          <div class="mb-3">
            <strong>Date:</strong> {{formatDate transaction.timestamp}}
          </div>
          <div class="mb-3">
            <strong>Description:</strong> 
            <p>{{transaction.description}}</p>
          </div>
        </div>
        <div class="col-md-6">
          <h5 class="card-title">Member Information</h5>
          {{#if transaction.Member}}
            <div class="mb-3">
              <strong>Name:</strong> <a href="/members/{{transaction.Member.id}}">{{transaction.Member.name}}</a>
            </div>
            <div class="mb-3">
              <strong>Phone:</strong> {{transaction.Member.phone}}
            </div>
          {{else}}
            <div class="alert alert-warning">Member information not available</div>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="card-footer">
      <a href="/transactions" class="btn btn-secondary">Back to Transactions</a>
      
      {{#if (eq transaction.type "deposit")}}
        <a href="/transactions/type/deposit" class="btn btn-outline-success">View All Deposits</a>
      {{else if (eq transaction.type "withdrawal")}}
        <a href="/transactions/type/withdrawal" class="btn btn-outline-danger">View All Withdrawals</a>
      {{else if (eq transaction.type "loan")}}
        <a href="/transactions/type/loan" class="btn btn-outline-primary">View All Loans</a>
      {{else if (eq transaction.type "repayment")}}
        <a href="/transactions/type/repayment" class="btn btn-outline-info">View All Repayments</a>
      {{/if}}
    </div>
  </div>
</div>